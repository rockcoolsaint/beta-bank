%header.main-header
  %a.logo{ href: "#" }
    %span.logo-mini
      %b
        B
      NK
    %span.logo-lg
      %b
        BETA
      Bank
  %nav.navbar.navbar-static-top
    %a.sidebar-toggle{ href: "#", data: { toggle: "push-menu" }, role: "button" }
      %span.sr-only
        Toggle Navigation
    .navbar-custom-menu
      %ul.nav.navbar-nav
        %li.dropdown.user.user-menu
          %a.dropdown-toggle{ href: "#", data: { toggle: "dropdown"}, "aria-example": true }
            = image_tag "", class: "user-image"
            %span.hidden-xs
              #{current_user.username} (#{current_user.role})
          %ul.dropdown-menu
            %li.user-header
              = image_tag "", class: "img-circle", alt: "User Image"
              %p
                #{current_user.full_name}
            %li.user-body
              #{current_user.email}
            %li.user-footer
              .pull-right
                = link_to destroy_user_session_path, class: "btn btn-danger", method: :delete do
                  .fa.fa-times
                  Sign Out