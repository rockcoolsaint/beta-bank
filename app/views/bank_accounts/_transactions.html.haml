%table.table.table-bordered
  %thead
    %tr
      %th Date of Transaction
      %th Amount
      %th Transaction
  %tbody
    - bank_account.account_transactions.each do |t|
      %tr
        %td #{t.created_at}
        %td #{t.transaction_type}
        %td #{number_to_currency(t.amount, unit: "N")}
    %tr
      %th
      %th Balance
      %th #{number_to_currency(bank_account.balance, unit: "N")}